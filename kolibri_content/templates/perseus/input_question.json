{% load perseus_tags %}{% autoescape off %}{
    "question": {
        "content": "{{ question | jsonify  }}\n\n[[â˜ƒ numeric-input 1]]",
        "images": {{% for image in question_images %}
            "{{ image.name }}": {
                "width": {{ image.width }},
                "height": {{ image.height }}
            }{% if forloop.last %}{% else %},{% endif %}
        {% endfor %}},
        "widgets":  {
            "numeric-input 1": {
                "type":"numeric-input",
                "alignment":"default",
                "static":false,
                "graded":true,
                "options": {
                    "static":false,
                    "answers":[{% for answer in answers %}
                        {
                            "value": {{ answer.answer}},
                            "status": "correct",
                            "message": "",
                            "strict": false,
                            "simplify":true,
                            "maxError": 0,
                            "answerForms": [
                                "proper",
                                "mixed",
                                "integer",
                                "decimal",
                                "improper"
                            ]
                        }{% if forloop.last %}{% else %},{% endif %}
                    {% endfor %}],
                    "size":"normal",
                    "coefficient":false,
                    "labelText":""
                },
                "version": {
                    "major":0,
                    "minor":0
                }
            }
        }
    },
    "answerArea":{
        "calculator":false,
        "chi2Table":false,
        "periodicTable":false,
        "tTable":false,
        "zTable":false
    },
    "itemDataVersion": {
        "major": 0,
        "minor": 1
    },
    "hints": [{% for hint in hints %}
        {
            "widgets":{},
            "images":{{% for image in hint.images %}
                "{{ image.name }}": {
                    "width": {{ image.width }},
                    "height": {{ image.height }}
                }{% if forloop.last %}{% else %},{% endif %}
            {% endfor %}},
            "content":"{{hint.hint | jsonify  }}",
            "replace":false
        }{% if forloop.last %}{% else %},{% endif %}
    {% endfor %}]
}
{% endautoescape %}